<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme1" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transperent</item>
        <item name="colorPrimaryDark">@color/transperent</item>
        <item name="colorAccent">@color/transperent</item>
        <item name="android:shadowColor">@color/transperent</item>
        <item name="android:outlineSpotShadowColor">@color/transperent</item>
        <item name="android:outlineAmbientShadowColor">@color/transperent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CardView1" parent="Base.CardView">
        <item name="cardCornerRadius">40dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:outlineAmbientShadowColor">@color/cardview_dark_background</item>
        <item name="android:innerRadius">10dp</item>
        <item name="android:shadowDx">20.0</item>
        <item name="android:shadowDy">-20.0</item>
    </style>
    <!-- Theme.AppCompat.Light.Dialog -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primecolor2</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/home_group"
    android:background="#1Dffffff"
    >
    <View
        android:id="@+id/view_divider_top_home"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_home_item"
            android:text="CUỘC THI"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <View
            android:layout_height="0.3dp"
            android:layout_weight="1"
            android:layout_width="0dp" />

        <TextView
            android:id="@+id/tv_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_home_item"
            android:text="Xem tất cả"
            android:textSize="15dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_home_item1"
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="@dimen/home_item_height"
                    android:layout_marginLeft="@dimen/margin_home_item"
                    android:layout_marginTop="@dimen/margin_home_item"
                    android:layout_marginRight="@dimen/margin_home_item"
                    android:src="@drawable/image_test_contest" />

                <LinearLayout
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="#6AFF7F24">

                    <TextView
                        android:id="@+id/tv_home_content1"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center"
                        android:outlineAmbientShadowColor="@color/transperent"
                        android:text="AAAAA"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_home_item2"
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="@dimen/home_item_height"
                    android:layout_marginLeft="@dimen/margin_home_item"
                    android:layout_marginTop="@dimen/margin_home_item"
                    android:layout_marginRight="@dimen/margin_home_item"
                    android:src="@drawable/image_test_contest" />

                <LinearLayout
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="#6AFF7F24">

                    <TextView
                        android:id="@+id/tv_home_content2"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center"
                        android:outlineAmbientShadowColor="@color/transperent"
                        android:text="AAAAA"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_home_item3"
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="@dimen/home_item_height"
                    android:layout_marginLeft="@dimen/margin_home_item"
                    android:layout_marginTop="@dimen/margin_home_item"
                    android:layout_marginRight="@dimen/margin_home_item"
                    android:src="@drawable/image_test_contest" />

                <LinearLayout
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="#6AFF7F24">

                    <TextView
                        android:id="@+id/tv_home_content3"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center"
                        android:outlineAmbientShadowColor="@color/transperent"
                        android:text="AAAAA"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imv_home_item4"
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="@dimen/home_item_height"
                    android:layout_marginLeft="@dimen/margin_home_item"
                    android:layout_marginTop="@dimen/margin_home_item"
                    android:layout_marginRight="@dimen/margin_home_item"
                    android:src="@drawable/image_test_contest" />

                <LinearLayout
                    android:layout_width="@dimen/home_item_width"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="#6AFF7F24">

                    <TextView
                        android:id="@+id/tv_home_content4"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center"
                        android:outlineAmbientShadowColor="@color/transperent"
                        android:text="AAAAA"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

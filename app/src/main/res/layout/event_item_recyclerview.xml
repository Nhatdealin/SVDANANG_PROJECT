<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:outlineSpotShadowColor="@color/transperent"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_content_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cover1" />
            <TextView
                android:id="@+id/tv_title_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:text="AAAAAAA"
                android:textColor="#8B7D7B"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_summary_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="4dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/line_divide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/cardview_default_radius">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/icon_event_size"
                            android:layout_height="@dimen/icon_event_size"
                            android:src="@drawable/icon_location"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:id="@+id/tv_location_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Thành phố Đà Nẵng" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/cardview_default_radius">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/icon_event_size"
                            android:layout_height="@dimen/icon_event_size"
                            android:src="@drawable/icon_fee"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:id="@+id/tv_fee_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="500.000" />
                        <TextView
                            android:id="@+id/tv_currency_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="VND" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/cardview_default_radius">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/icon_event_size"
                            android:layout_height="@dimen/icon_event_size"
                            android:src="@drawable/ic_starttime"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:id="@+id/tv_starttime_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="2/10/2019" />

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/icon_event_size"
                            android:layout_height="@dimen/icon_event_size"
                            android:src="@drawable/ic_endtime"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:id="@+id/tv_endtime_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="2/10/2019" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/icon_event_size"
                            android:layout_height="@dimen/icon_event_size"
                            android:src="@drawable/icon_topic"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:id="@+id/tv_topic_event"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="Môi trường" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_register_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/primecolor2"
                        android:shadowColor="@color/cardview_dark_background"
                        android:text="Đăng kí"
                        android:textColor="#ffffff" />
                    <Button
                        android:id="@+id/btn_information_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/primecolor2"
                        android:shadowColor="@color/cardview_dark_background"
                        android:text="Xem chi tiết"
                        android:textColor="#ffffff" />

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>